@{
    ViewData["Title"] = "Test Result";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Blink Test Result</title>

    <style>
        body {
            font-family: system-ui, -apple-system, Segoe UI, sans-serif;
            background: #f6f7f9;
            margin: 0;
            padding: 0;
        }

        .card {
            background: #ffffff;
            max-width: 420px;
            margin: 100px auto;
            padding: 30px;
            border-radius: 14px;
            box-shadow: 0 12px 28px rgba(0,0,0,0.08);
            text-align: center;
        }

        h2 {
            margin-top: 0;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .bpm {
            font-size: 34px;
            font-weight: 700;
            color: #4f46e5;
            margin: 10px 0;
        }

        .label {
            font-size: 14px;
            color: #555;
        }

        .level {
            margin-top: 12px;
            display: inline-block;
            padding: 8px 16px;
            border-radius: 999px;
            background: #eef2ff;
            color: #3730a3;
            font-size: 14px;
            font-weight: 500;
        }

        .waiting {
            background: #fff7ed;
            color: #9a3412;
        }

        .note {
            margin-top: 16px;
            font-size: 13px;
            color: #666;
        }
    </style>
</head>

<body>

    <div class="card">
        <h2>Blink Test Result</h2>

        <div class="label">Blinks Per Minute</div>
        <div class="bpm">@ViewBag.Bpm</div>

        <div class="label">Risk Level</div>

        @if ((string)ViewBag.Level == "Waiting..." || ViewBag.Bpm == 0)
        {
            <div class="level waiting">Waiting...</div>
            <div class="note">Test running... please wait</div>

            <script>
                setTimeout(() => {
                    location.reload();
                }, 3000);
            </script>
        }
        else
        {
            <div class="level">@ViewBag.Level</div>
        }
    </div>

</body>
</html>
